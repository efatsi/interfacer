<div class="well col-md-6">
  <h2>Call Function</h2>
  <br>

  <%= form_for :api_call, remote: true, url: '/function', html: {id: "function_call"} do |f| %>
    <%= render "users/particle_authentication_fields", f: f %>

    <br>

    <%= f.label :name, "Function Name" %>
    <%= f.text_field :name, class: "form-control" %>

    <br>

    <%= f.label :argument, "Function Argument" %>
    <%= f.text_field :argument, class: "form-control" %>

    <br>
    <br>

    <div class="input-group">
      <span class="input-group-btn">
        <%= f.submit "Execute", class: 'btn btn-primary' %>
      </span>
      <%= f.text_field :results, placeholder: "Results...", class: "form-control", disabled: true, id: "function_call_results" %>
    </div>
  <% end %>
</div>

